<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="5dp">

    <android.support.v7.widget.CardView
        android:id="@+id/favorite_cardview"
        android:layout_width="match_parent"
        android:layout_height="190dp"
        app:cardCornerRadius="10dp"
        app:cardBackgroundColor="#f6dde1e2"
        app:cardElevation="10dp"
        android:padding="10dp">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/favorites_recipe_image"
            android:scaleType="centerCrop"
            android:src="@drawable/background_food_bbq" />

        <TextView
            android:id="@+id/favorite_recipe_title"
            style="@style/TextGreyShadow"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:padding="7dp"
            android:shadowDx="2"
            android:shadowDy="2"
            android:shadowRadius="3"
            android:background="#7b403e3e"
            android:text="Chicken soup"
            android:textColor="@color/white"
            android:textSize="25sp"
            android:textStyle="bold" />

        <LinearLayout
            android:id="@+id/recipeslist_maintext_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_margin="7dp"
                    android:gravity="bottom"
                    android:paddingLeft="40dp">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_time_left" />

                    <TextView
                        android:id="@+id/favorite_recipe_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="8dp"
                        android:gravity="center"
                        android:paddingBottom="4px"
                        android:text="1hr 30min"
                        android:textSize="14sp" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="5dp"
                    android:gravity="bottom|right"
                    android:paddingRight="40dp">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="17dp"
                        android:scaleType="fitCenter"
                        android:src="@drawable/ic_users_person_people" />

                    <TextView
                        android:id="@+id/favorite_recipe_portions"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="8dp"
                        android:gravity="bottom"
                        android:text="8"
                        android:textSize="14sp" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>