<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="3dp"
    android:background="@null"
    android:orientation="vertical">

    <android.support.v7.widget.CardView
        android:id="@+id/allrecipes_cardView"
        android:layout_width="match_parent"
        android:layout_height="50dp">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:scaleType="fitXY"
            android:layout_marginLeft="13dp"
            android:layout_gravity="center_vertical"
            android:id="@+id/energy_data_image"
            android:src="@drawable/ic_food_ready" />

        <TextView
            android:id="@+id/energy_data_date"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_marginLeft="60dp"
            android:gravity="center_vertical"
            android:text="25/02/2015"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/energy_data_value"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="40dp"
            android:gravity="center_vertical"
            android:text="620.00"
            android:textColor="@color/dark_deep_orange"
            android:textSize="16sp" />

    </android.support.v7.widget.CardView>
</LinearLayout>