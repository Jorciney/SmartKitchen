<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@null"
    android:orientation="vertical"
    android:padding="3dp">

    <android.support.v7.widget.CardView
        android:id="@+id/recipeslist_cardView"
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/recipeslist_maintext_layout1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">

                <ImageView
                    android:id="@+id/recipeslist_row_image"
                    android:layout_width="80dp"
                    android:layout_height="match_parent"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="3dp"
                    android:scaleType="centerCrop"
                    android:src="@drawable/background_food_1" />

                <LinearLayout
                    android:id="@+id/recipeslist_maintext_layout"
                    android:layout_width="190dp"
                    android:layout_height="match_parent"
                    android:layout_toRightOf="@id/recipeslist_row_image"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/recipeslist_row_title"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="15dp"
                        android:layout_marginTop="3dp"
                        android:padding="3dp"
                        android:text="Chicken soup"
                        android:textColor="#286a8b"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="7dp"
                            android:gravity="bottom">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_time_left" />

                            <TextView
                                android:id="@+id/recipeslist_row_time"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="8dp"
                                android:gravity="center"
                                android:text="1hr 30min"
                                android:textSize="14sp" />
                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_margin="5dp"
                            android:gravity="bottom|center_horizontal">

                            <ImageView
                                android:layout_width="17dp"
                                android:layout_height="17dp"
                                android:scaleType="fitCenter"
                                android:src="@drawable/ic_users_person_people" />

                            <TextView
                                android:id="@+id/recipeslist_row_portions"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="8dp"
                                android:gravity="bottom"
                                android:text="8"
                                android:textSize="14sp" />
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="15dp"
                android:layout_toRightOf="@id/recipeslist_maintext_layout1"
                android:background="@null"
                android:gravity="center"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/recipeslist_favorite_imagebutton"
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:layout_marginLeft="10dp"
                    android:background="@null"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_star_favorite_gray_64" />

            </LinearLayout>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>